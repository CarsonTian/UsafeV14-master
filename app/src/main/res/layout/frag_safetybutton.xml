<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frag_safetybutton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_sb_setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.65"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6" />

        <TextView
            android:id="@+id/tv_contactSetting"
            android:layout_width="40dp"
            android:layout_height="41dp"
            android:background="@drawable/addcontact"
            android:textSize="35px" />

        <LinearLayout
            android:layout_width="14dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sb_contact1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.40"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@color/textbg"
                android:gravity="center"
                android:text=" Contact(1): "
                android:textSize="35px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="0.48">

            <TextView
                android:background="@color/textbg"
                android:id="@+id/tv_contactName1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.93"
                android:gravity="left"
                android:text=""
                android:textSize="35px" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sb_contact2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.40"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@color/textbg"
                android:gravity="center"
                android:text=" Contact(2): "
                android:textSize="35px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.48">

            <TextView
                android:background="@color/textbg"
                android:id="@+id/tv_contactName2"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.99"
                android:gravity="left"
                android:text=""
                android:textSize="35px" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sb_contact3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.40"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@color/textbg"
                android:gravity="center"
                android:text=" Contact(3): "
                android:textSize="35px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_weight="0.48"
            android:orientation="horizontal">

            <TextView
                android:background="@color/textbg"
                android:id="@+id/tv_contactName3"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.86"
                android:gravity="left"
                android:text=""
                android:textSize="35px" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <com.example.greyson.test1.widget.CountDownView
        android:id="@+id/countdownview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        custom:numberColor="@android:color/black"
        custom:showSec="true"
        custom:unitColor="@android:color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <LinearLayout
        android:id="@+id/ll_sb_startReset"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_startButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/startbutton"
                android:textSize="35px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ResetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cancelbutton"
                android:textSize="35px" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>