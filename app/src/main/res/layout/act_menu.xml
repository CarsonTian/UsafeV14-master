<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundpic"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.40">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_welcome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.33"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:textSize="35px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ll_emergencyCallMenu"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:background="@drawable/emergencycall"
            android:textSize="35px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ll_panicButtonMenu"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:background="@drawable/panicbutton"
            android:textSize="35px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ll_startTrackMenu"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:background="@drawable/startmytrail"
            android:textSize="35px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ll_safetyMapMenu"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:background="@drawable/safeplacesnearby"
            android:textSize="35px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/ll_helpAndSetting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.61"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="267dp"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:layout_weight="0.43">

            <TextView
                android:id="@+id/tv_userHelp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/help"
                android:textSize="35px"
                android:layout_weight="0.05" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.67"
                android:textSize="35px" />

            <TextView
                android:id="@+id/tv_userSetting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:background="@drawable/setting"
                android:textSize="35px" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>